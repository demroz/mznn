#include <mempool.hpp>
#include <gtest/gtest.h>
#include <addutils.hpp>


TEST(MemPoolTest, ConstructorIteratorTests)
{
    const size_t blocksize = 3;
    aad::MemPool<double, blocksize> dPool;
    
    double *x[13];
    for(int i = 0; i < 13; i++)
      {
	x[i] = dPool.emplace_back();
	*x[i] = random(-1,1);
      }
    int i = 0;
    for(auto v : dPool)
    {
      EXPECT_EQ(v, *x[i]);
      i++;
    }
}

TEST(MemPoolTest, Jnk)
{
  double x[3];
}



